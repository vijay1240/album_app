<p id="notice"><%= notice %></p>
<p>
  <% if @user.profile_picture.try(:picture) %>
    <%= image_tag(@user.profile_picture.picture.url) %>
  <% else %>
    No profile picture.
  <% end %>
</p>
<p>
  <b>Full name:</b>
  <%= @user.full_name %>
</p>

<p>
  <b>Birthdate:</b>
  <%= @user.birthdate %>
</p>

<p>
  <b>About me:</b>
  <%= @user.about_me %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %>

